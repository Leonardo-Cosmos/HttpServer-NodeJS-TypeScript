{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/express/index.d.ts",
    "./node_modules/@types/cors/index.d.ts",
    "./node_modules/@types/mongodb/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
